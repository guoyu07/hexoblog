#header
  margin-top 0px

  a
    color #999
    &:hover
      color color-link
      text-decoration none
  h1
    font-weight normal
    font-size 2.5em
    line-height 1
  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  #main-nav
    border-top 1px solid #DDD
    border-bottom 1px solid #DDD
    font-family font-title
    line-height 2.5em
    transition .3s
    background-color #fff
    width 100%
    z-index:9999
    ul
      list-style none
      margin-bottom 0
      z-index:9999
      li
        display inline-block
        padding: 3px 0px
        margin-right 10%
        a
          color #333
          font-size 16px
          &:hover
            color #258fb8




    

    
